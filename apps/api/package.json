{
  "name": "@app/backend",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "@app/contracts": "workspace:*",
    "@app/shared": "workspace:*",
    "@app/prisma": "workspace:*",
    "@orpc/nest": "^1.11.3",
    "@orpc/server": "^1.11.3"
  },
  "scripts": {
    "repl": "nest start --entryFile repl",
    "dev": "nest start --watch",
    "build": "tsc -p tsconfig.app.json",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "check": "tsc -p tsconfig.app.json --noEmit",
    "clean": "rm -rf dist",
    "serve": "NODE_ENV=production node -r tsconfig-paths/register dist/apps/backend/main.js"
  },
  "turbo": {
    "outputs": [
      "dist/**"
    ]
  }
}
