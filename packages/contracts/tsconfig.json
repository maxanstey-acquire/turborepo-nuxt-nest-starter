{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "lib": ["ES2022"],
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@schemas/*": ["./schemas/*"]
    },
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
